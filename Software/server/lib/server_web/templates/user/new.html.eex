<h1>Begin</h1>
<%= if @changeset.action do %>
    <div class="alert alert-danger">
        <p> Enter a valid email please </p>
    </div>
<% end %>
<%= form_for @changeset, Routes.user_path(@conn, :create), fn f -> %>
    <div>
        <%= text_input f, :email, placeholder: "Email" %>
        <%= error_tag f, :email %>
    </div>
    <%= submit "Begin"%>
<% end %>